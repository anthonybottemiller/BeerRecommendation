@{
	Layout = "Shared/_Layout.cshtml";
}
<h2>Get Recommended Beers</h2>
<div class="row">
  <form action="/recommend/results" method="post">
    <div class="col-sm-8">
      <label for="beer-id">Select a beer you like:</label>
      <select class="form-control" name="beer-id">
        @foreach (var beer in Model["beers"])
        {
          <option value="@beer.GetId()">@beer.GetName() -
          <strong>Brewery(ies):</strong>
          @foreach (var brewery in beer.GetBreweries())
          {
            <span> @brewery.GetName()</span>
          }</option>
        }
      </select>
    </div>
    <div class="col-sm-4">
      <label for="list-size">Tell us how many beers to recommend to you:</label>
      <input class="form-control" type="number" name="list-size" min="1" max="50" value="5" required>
    </div>
    <div class="col-sm-12 submit-div">
      <button type="submit" class="btn btn-warning">Get Recommendations</button>
    </div>
  </form>
</div>
