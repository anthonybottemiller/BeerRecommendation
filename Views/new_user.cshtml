@{
	Layout = "Shared/_Layout.cshtml";
}
<div class="form">
	<form action="/users/new/success" method="post">
	  <input class="form-control" type="text" name="name" placeholder="User Name" required>
		<br>
		@if (Model)
		{
			<p class="error-message">That user name already exists.  Please choose a new name.</p>
		}
	  <button class="btn btn-warning" type="submit">Add User</button>
	</form>
