@{
	Layout = "Shared/_Layout.cshtml";
	var ratedBeers = @Model.GetRated();
	var userId = @Model.GetId();
}
<div class="form">
	<h2>@Model.GetName()</h2>
	@if (ratedBeers.Count > 0)
	{
		<h3>Rated beers</h3>
		<ul>
		@foreach (var beer in ratedBeers)
		{
			<li><h4><a href="/beers/@beer.GetId()">@beer.GetName()</a> - Rating: @beer.GetUserRating(userId) out of 5</h4></li>
		}
		</ul>
	}
</div>
